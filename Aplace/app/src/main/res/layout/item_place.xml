<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgItemPlace_Picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/no_image"
        app:layout_constraintLeft_toLeftOf="parent" />
    
    <TextView
        android:id="@+id/txtItemPlace_PlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imgItemPlace_Picture"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txtItemPlace_PlaceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="place address"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtItemPlace_PlaceName"
        app:layout_constraintLeft_toRightOf="@+id/imgItemPlace_Picture"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txtItemPlace_PlaceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtItemPlace_PlaceAddress"
        app:layout_constraintLeft_toRightOf="@+id/imgItemPlace_Picture"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>